<!DOCTYPE html>
<html lang="en" class="govuk-template app-html-class">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">

    <!--SEO -->
    <title>@ViewBag.SEOTitle - @Consts.SiteName</title>
    <meta name="description" content="@ViewBag.SEODescription">
    @if (!String.IsNullOrEmpty(ViewBag.Keywords))
    {
        <meta name="keywords" content="@ViewBag.SEOKeywords">
    }
    @RenderSection("Meta", required: false)

    <!-- Favicons -->
    <meta name="theme-color" content="blue" />
    <link rel="shortcut icon" sizes="16x16 32x32 48x48" href="/assets/images/favicon.ico" type="image/x-icon" />
    <link rel="mask-icon" href="/assets/images/govuk-mask-icon.svg" color="blue">
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/govuk-apple-touch-icon-180x180.png">
    <link rel="apple-touch-icon" sizes="167x167" href="/assets/images/govuk-apple-touch-icon-167x167.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/assets/images/govuk-apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" href="/assets/images/govuk-apple-touch-icon.png">

    <!-- Sharing -->
    <meta property="og:image" content="/assets/images/govuk-opengraph-image.png">

    <!-- Styles -->
    <link href="~/assets/css/all.css" asp-append-version="true" rel="stylesheet" />
    @RenderSection("Styles", required: false)
</head>
<body class="govuk-template__body app-body-class">
    <script src="~/assets/js/init.min.js" asp-append-version="true" async></script>
    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>

    <!-- Header -->
    <partial name="Layout/_Header" />

    <!-- Main Content -->
    <div class="govuk-width-container">
        <partial name="Layout/_PhaseBanner" />
        <partial name="Layout/_CookieConsentPartial" />
        <a href="#" class="govuk-back-link">Back</a>
        <main class="govuk-main-wrapper app-main-class" id="main-content" role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <partial name="Layout/_Footer" />

    <!-- Scripts -->
    <script src="~/assets/js/govuk.min.js" asp-append-version="true" async></script>
    <script src="~/assets/js/validation.min.js" asp-append-version="true" async></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
